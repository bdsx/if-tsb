{
    "entry": {
        "./src/cli.ts": "./cli.bundle.js",
        "./src/index.ts": "./index.bundle.js"
    },
    "bundlerOptions": {
        "verbose": true
    },
    "compilerOptions": {
        "target": "ES2015",
        "lib": [ "ES2015" ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "importHelpers": true,
        "paths": {
          "bdsx/*": ["./bdsx/*"]
       }
    }
}